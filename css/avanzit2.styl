
body 
	font-family 'News Cycle', sans-serif
	color #333333
	header
		height 52px
		background white 
		.texto
			padding 2em 4em 0 0
			float right
			p 
				margin 0
				a
					color #333333
					font-size 1.2em
					text-decoration none
					&:hover
						color #D9325D
	nav
		height 129px
		background white 
		.logo
			float left
			padding-left 4em
			padding-top 2em
			img
				height 80px
		ul
			margin-top 3em
			padding-right 2em
			overflow hidden
			li 	
				margin 1em 3em 0 0
				float right
				list-style none
				p  
					margin 0
					color black
					padding-bottom 1em
					font-size 1.6em
					text-decoration none 
					display block
					cursor pointer
					-webkit-transition 0.5s ease
					-moz-transition 0.5s ease
					-o-transition 0.5s ease
					transition 0.5s ease
					&:hover
						color #00a5a1 
						border-bottom solid 2px #00a5a1
	section
		background white
		.row
			margin-top 2em 
			background white 
			.imagen
				figure
					img
						width 96%
			.textos
				.avanzit
					p 
						font-size 21px
						padding 0 1.5em
				.titulo
					p 
						font-size 3.7em
						text-align center
						margin 0 0 0.5em 0
	.iconos
		background white
		.menu
			padding 0
			margin 5em 0 0 2em 
			li 
				list-style none
				margin 0 2.8em 0 0
				border-top solid 2px black
				float left
				padding 2.5em 3em 0 0 
				width 17em
				i 
					color #333333
					font-size 60px
					padding 0 1.4em
				a 
					padding 0 4.2em
					text-decoration none
					font-size 20px
					color #333333
	


		
