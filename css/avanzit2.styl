@import "hover-min.css"

.verde
	border-top solid 2px #00a5a1 
.azul
	border-top solid 2px #0b4c7e
.naranjo
	border-top solid 2px #F77623
 .amarillo
	border-top solid 2px #F4C458
.bordes
	border-left solid 1px #ccc

body 
	font-family 'News Cycle', sans-serif
	color #666
	nav
		height 129px
		.logo
			float left
			padding-left 4em
			padding-top 2em
			img
				height 83px
		ul
			margin-top 2em
			padding-right 3em
			overflow hidden
			li 	
				margin 1em 0 0 0
				float right
				list-style none
				padding 0 1em
				border-right solid 1px #ccc
				p  
					margin 0
					padding 0.6em 0.5em 0.7em 0.5em
					font-size 1.6em
					text-decoration none 
					display block
					cursor pointer
					-webkit-transition 0.7s ease
					-moz-transition 0.7s ease
					-o-transition 0.7s ease
					transition 0.7s ease
					&:hover
						color #00a5a1 
						border-bottom solid 2px #00a5a1
	section
		background white
		.row
			margin-top 4em 
			background white 
			.imagen
				height 322px
				overflow hidden
				img
					width 96%
			.textos
				.avanzit
					p 
						font-size 21px
						padding 0 1.5em
				.titulo
					p 
						font-size 3.1em
						text-align center
						margin 0 0 0.7em 0
	.iconos
		background white
		.menu
			padding 0
			margin 6em 0 0 2em 
			li 
				list-style none
				margin 0 2.8em 7em 0
				float left
				padding 2.5em 3em 0 0 
				width 17em
				i 
					color #333333
					font-size 57px
					padding 0 1.5em 0.5em 1.5em
				a 
					color #666
					font-size 24px
					padding 0 3.2em  
					text-decoration none
					display: inline-block;
					-webkit-transition-duration: 0.3s;
					transition-duration: 0.3s;
					-webkit-transition-property: -webkit-transform;
					transition-property: transform;
					-webkit-transform: translateZ(0);
					-ms-transform: translateZ(0);
					transform: translateZ(0);
					&:hover
						-webkit-transform: scale(1.1);
						-ms-transform: scale(1.1);
						transform: scale(1.1); 		
	.contacto
		padding 1.8em 
		border-top solid 1px #ccc
		overflow hidden
		.d
			float left 
			p 
				font-size 22px
				color #666
		.english
			float right
			i 
				color #666
				margin-right 0.5em
				font-size 18px
			a
				color #333333
				text-decoration none
				font-size 20px
				&:hover
					color #00a5a1 

							


		
